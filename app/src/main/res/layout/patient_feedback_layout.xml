<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/rated_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_person"
        app:tint="@color/white"
        android:background="@drawable/background_30"
        android:padding="10dp"
        android:backgroundTint="#a9b7b8"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_patient_name"
        android:text="@string/app_name"
        android:padding="5dp"
        android:textSize="15sp"
        android:layout_toRightOf="@id/rated_image"
        android:layout_marginLeft="12sp"
        android:textColor="#0f3747"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rated_date"
            android:text="Date: 12/07/2021"
            android:layout_marginLeft="15sp"
            android:layout_below="@id/txt_patient_name"
            android:layout_toRightOf="@id/rated_image"
            android:textColor="#8C868A"
            android:textSize="12sp"
            />
    </RelativeLayout>

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/ratemessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:theme="@style/RatingBar"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        android:isIndicator="true"
        android:max="5"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_patient_desc"
        android:text="@string/app_name"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:layout_marginLeft="25dp"
        android:textColor="#0f1111"
        />
</LinearLayout>