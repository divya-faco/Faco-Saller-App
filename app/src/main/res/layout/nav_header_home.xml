<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top"
    >

    <ImageButton
        android:id="@+id/clear_drwer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_clear"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_10dp"
        android:backgroundTint="#FFEEEE"
        app:tint="#FA5F5F"
        android:padding="7dp"
        />
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/clear_drwer"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            app:cardElevation="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:id="@+id/img_userPhoto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_baseline_person"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/txt_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_menu"
                android:textColor="@color/user_name"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:textColor="#FA5F5F"
                android:textSize="12dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_edit__6__3"
                android:drawablePadding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_10dp"
                android:backgroundTint="#FFEEEE"
                android:padding="7dp"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emergency"
        android:layout_below="@id/linear_layout"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:id="@+id/emergency"
        android:textColor="@color/emergency"
        android:drawableLeft="@drawable/nav_img1"
        android:drawablePadding="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        />
</RelativeLayout>